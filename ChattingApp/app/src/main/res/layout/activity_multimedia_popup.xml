<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#eeeeee"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="300dp">
    <!-- 매니패스트 다이얼로그로 변경해주기 -->

    <!-- 타이틀바 -->
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <Button
            android:id="@+id/popup_back"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="-7dp"
            android:background="#00000000"
            android:drawableLeft="@drawable/ic_baseline_close_24"
            android:gravity="center"
            android:onClick="mOnClose"
            android:textColor="#ff7a00"
            android:textSize="15sp"
            android:contentDescription="Back to activity_chat"
            android:hint="e.g 8"/>

    </RelativeLayout>
    <!-- //end 타이틀바 -->

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/popup_image_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="193dp"
            android:layout_marginBottom="171dp"
            android:background="#00ff0000"
            android:drawableTop="@drawable/ic_baseline_photo_library_24"
            android:text="이미지"
            android:textColor="#4C4C4C"
            android:textSize="10dp" />
    </RelativeLayout>


</LinearLayout>